<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ProjetFinal.PageUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjetFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >

    <Grid>
        <TextBlock></TextBlock>
        <StackPanel>
            <TextBlock x:Name="UsernameText" Text="Nom utilisateur" />
            <TextBox x:Name="Username" Visibility="Visible" />
            <TextBlock x:Name="PasswordText" Text="Mot de passe" />
            <PasswordBox x:Name="Password" Visibility="Visible" />
            <CheckBox x:Name="IsAdminCheckBox" Content="Se connecter en tant qu'admin" Visibility="Visible"/>

            <Button x:Name="connection" Click="Connection_Click" Background="Green" Visibility="Visible">Connection</Button>
            <Button x:Name="deconnection" Click="Deconnection_Click" Background="Red" Visibility="Collapsed">DÃ©connexion</Button>
            <TextBlock x:Name="MessageConn" />
        </StackPanel>
    </Grid>
</Page>
