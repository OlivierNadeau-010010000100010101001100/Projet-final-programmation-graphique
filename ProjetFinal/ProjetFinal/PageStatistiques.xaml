<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ProjetFinal.PageStatistiques"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjetFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="testButton" Click="testButton_Click">TEST CONNECTION</Button>
        <TextBlock x:Name="MessageErreur" />


        <StackPanel>
            <ListView x:Name="categorieList" MaxHeight="500">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Categorie">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Categorie_id}" Width="200" />
                            <TextBlock Text="{Binding Categorie_nom}" Width="100" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
       
    </Grid>
    
        
    

    
    
</Page>
